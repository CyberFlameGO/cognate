#!/usr/bin/env bash
# This script will automatically install CognaC's dependencies on ubuntu, debian, mint, etc.
# Non deb distro or BSD users will have to install these dependencies themselves, some from source.
# Sorry.
sudo apt install flex bison libblocksruntime-dev libgc-dev clang clang-format -y
flex lexer.l
bison parser.y -d
clang lex.yy.c parser.tab.c cognac.c -o cognac -Ofast
