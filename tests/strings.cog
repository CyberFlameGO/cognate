~
Print If (Characters in 'Hello ☺', == List ('H','e','l','l','o',' ','☺'))
  'PASS: Extracting characters from strings'
else
  'FAIL: Extracting characters from strings';
~
Print If (Suffix ' ☺' to 'Hello world', == 'Hello world ☺')
  'PASS: Converting list of strings to combined string'
else
  'FAIL: Converting list of characters to combined string';

Print If (Ordinal of '☺', == 9786)
  'PASS: Converting string to UTF8 value with Ordinal'
else
  'PASS: Converting string to UTF8 value with Ordinal';

Print If (Character with value 9786, == '☺')
  'PASS: Converting UTF8 value to string'
else
  'FAIL: Converting UTF8 value to string';

Print If (Number '123.4', == 123.4)
  'PASS: Casting strings to numbers'
else
  'PASS: Casting strings to numbers';
~
Print If ('Hello λ world λ testing', Split on ' λ ', == List('Hello', 'world', 'testing'))
  'PASS: Splitting a string with a multi-character delimiter';
else
  'FAIL: Splitting a string with a multi-character delimiter';;
~
Print If (SubString from 1 to 7 of 'Hello ☺ world', == 'ello ☺')
  'PASS: SubStringing'
else
  'FAIL: SubStringing';
