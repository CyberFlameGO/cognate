Let X be 1;
If {X, == 1} {Print 'PASS: Variable assignment'}
else         {Print 'FAIL: Variable assignment'};

Do {
  Let X be 2;
  If {X, == 2} {Print 'PASS: Variable shadowing'}
  else         {Print 'FAIL: Variable shadowing'};
};

If {X, == 1} {Print 'PASS: Variable shadowing in block'}
else         {Print 'FAIL: Variable shadowing in block'}; 

Do {
  Set X to 3;
  If {X, == 3} {Print 'PASS: Variable modification'} 
  else         {Print 'FAIL: Variable modification'};
};

If {X, == 3} {Print 'PASS: Variable modification in block'} 
else         {Print 'FAIL: Variable modification in block'};
